<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="60dp"
    tools:context=".Siesta">

    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:text="Siestas"
        android:visibility="gone"
        android:textColor="@color/grey"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/adv"
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/ingresa_los_datos_de_tu_beb_para_empezar_a_llevar_el_control_de_sus_siestas"
        android:textSize="18sp"
        android:visibility="gone"
        android:textStyle="bold" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="17dp"
        app:elevation="6dp"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_add"
        app:tint="@android:color/white"
        app:borderWidth="0dp"
        tools:ignore="ContentDescription,ImageContrastCheck,SpeakableTextPresentCheck,UsingOnClickInXml" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        tools:ignore="SpeakableTextPresentCheck,UselessParent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/siestas"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

        </androidx.recyclerview.widget.RecyclerView>

    </ScrollView>

</FrameLayout>