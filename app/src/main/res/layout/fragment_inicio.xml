<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/white"
    tools:context=".Inicio">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <!-- TODO: Update blank fragment layout -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/hoyI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:text="hoy"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/fechaI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/hoyI"
                android:layout_marginTop="20dp"
                android:text="fecha"
                android:textSize="17sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="50dp"
                android:text="Hoy"
                android:textStyle="bold"
                android:textColor="@color/grey"
                android:textSize="22sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="15dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="5dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="23dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="190dp"
                            android:text="Buenos dias,"
                            android:textColor="@color/grey"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/nombres"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="215dp"
                            android:text="Carlos y Dylan"
                            android:textColor="@color/grey"
                            android:textSize="24sp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/foto" />
                </androidx.cardview.widget.CardView>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="420dp"
                android:layout_marginBottom="50dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="15dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:text="Horario"
                        android:textColor="@color/grey"
                        android:textSize="17sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="50dp"
                        android:text="Acciones"
                        android:textColor="@color/grey"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="23dp">

                        <LinearLayout
                            android:id="@+id/alimentar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="80dp"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardView"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginStart="20dp"
                                app:cardBackgroundColor="#1ec6ff"
                                app:cardCornerRadius="100dp">

                                <ImageView
                                    android:id="@+id/imageView"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_gravity="center_horizontal|center_vertical"
                                    android:src="@drawable/ic_bib" />
                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:id="@+id/textView4"
                                android:layout_width="270dp"
                                android:layout_height="30dp"
                                android:layout_marginStart="20dp"
                                android:gravity="center_vertical"
                                android:text="Iniciar Seguimiento de Alimentación "
                                android:textColor="@color/grey"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                app:drawableRightCompat="@drawable/ic_next" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/siesta"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="130dp"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginStart="20dp"
                                app:cardBackgroundColor="#1ec6ff"
                                app:cardCornerRadius="100dp">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_gravity="center_horizontal|center_vertical"
                                    android:src="@drawable/ic_lun" />
                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:layout_width="270dp"
                                android:layout_height="30dp"
                                android:layout_marginStart="20dp"
                                android:gravity="center_vertical"
                                android:text="Iniciar Seguimiento de Sueño"
                                android:textColor="@color/grey"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                app:drawableRightCompat="@drawable/ic_next" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/guias"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="180dp"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginStart="20dp"
                                app:cardBackgroundColor="#1ec6ff"
                                app:cardCornerRadius="100dp">

                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_gravity="center_horizontal|center_vertical"
                                    android:src="@drawable/ic_lup" />
                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:layout_width="270dp"
                                android:layout_height="30dp"
                                android:layout_marginStart="20dp"
                                android:gravity="center_vertical"
                                android:text="Revisar Guias y Consejos"
                                android:textColor="@color/grey"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                app:drawableRightCompat="@drawable/ic_next" />
                        </LinearLayout>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</FrameLayout>