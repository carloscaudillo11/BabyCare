<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".contenido">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imagenTop"
                android:layout_width="match_parent"
                android:layout_height="220dp" />

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="20dp"
                android:background="@null"
                android:onClick="back"
                android:src="@drawable/ic_back"
                app:tint="@color/grey"
                tools:ignore="ContentDescription,UsingOnClickInXml,TouchTargetSizeCheck,TouchTargetSizeCheck,SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/tituloCont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="230dp"
                android:text="titulo"
                android:textColor="@color/grey"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/tituloCont"
                android:text="fecha"
                android:textColor="@color/grey"
                android:textSize="17sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/texto"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fecha"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:text="texto"
                android:textColor="@color/grey"
                android:textSize="16sp"
                android:textStyle="normal" />
        </RelativeLayout>
    </ScrollView>
</FrameLayout>